<h1>Categories</h1>
<h3><%= link_to "Parent Categories", parents_api_categories_path %></h3>
<p>
  <%= link_to "JSON", api_categories_path(:format => :json) %> | 
  <%= link_to "XML", api_categories_path(:format => :xml) %>
</p>
<table class='table table-striped tablesorter'>
<thead><tr><th><%= js_sort_link "id" %></th><th><%= js_sort_link "parent" %></th><th><%= js_sort_link "name" %></th></tr></thead>
<tbody>
<% @categories.each do |category| %>
  <tr><td><%= category.id %></td><td><%= category.category_type.name %></td><td><%= category.name %></td></tr>
<% end %>
</tbody>
</table>