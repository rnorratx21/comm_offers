%table.dataset.jumptable
  %thead
    %tr
      %th ID
      %th Name
      -if @can_update
        %th Edit
      
  %tbody
    - for role in roles
      %tr
        %td.title= role.id
        %td.title= link_to role.name, admin_role_path(role.id)
        -if @can_update
          %td= link_to "Edit", edit_admin_role_path(role.id)