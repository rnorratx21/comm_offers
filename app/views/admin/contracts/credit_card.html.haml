- body_id "admin"
= render 'admin/nav'
= render 'admin/contracts/nav'

%h1 Edit Billing for Contract

%h2
  Advertiser:
  = advertiser.name

= error_messages_for :contract

- form_for [:admin, @contract] do |f|
  = render :partial => "credit_card_fields", :locals => {:f => f}

  %p.actions
    = f.submit
    or 
    = link_to "cancel and go back", :back
    

- unless @contract.credit_card.new_record?
  %hr
  = button_to "Delete this credit card", [:credit_card, :admin, @contract], :method => :delete, :confirm => "Are you sure you want to delete this credit card?"
