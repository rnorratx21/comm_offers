%table.dataset.jumptable
  %thead
    %tr
      %th ID
      %th Name
      %th Parent
      -if @can_update
        %th Edit
      
  %tbody
    - for group in groups
      %tr
        %td.title= group.id
        %td.title= link_to group.name, admin_group_path(group.id)
        - if group.parent_group_id
          - parent = Group.find(group.parent_group_id)
          %td.title= link_to parent.name, admin_group_path(parent.id)
        -else
          %td= " "
        -if @can_update
          %td= link_to "Edit", edit_admin_group_path(group.id)

