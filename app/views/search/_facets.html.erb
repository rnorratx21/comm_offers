<% if @search_results.category_facets.length > 0 %>
<div id="facets">	
	<h3 class="title">Narrow Results by Category</h3>
	<% categories_by_name = @search_results.categories_by_name %>
	<% column_2_length = categories_by_name.length / 2 %>
	<% column_1_length = column_2_length + categories_by_name.length % 2 %>
	<ul class="column_1">
		<% (0..column_1_length-1).each do |index|	%>
			<% facet = categories_by_name[index] %>
			<li>
			<%= link_to "#{facet.category.name} (#{facet.count})", category_drilldown_path(facet.category, params), :class => 'facet', :id => "facet_#{facet.category.id}" %>
			</li>
		<% end %>
	</ul>
	<ul class="column_2">
		<% (column_1_length..categories_by_name.length - 1).each do |index|	%>
			<% facet = categories_by_name[index] %>
			<li>
			<%= link_to "#{facet.category.name} (#{facet.count})", category_drilldown_path(facet.category, params), :class => 'facet', :id => "facet_#{facet.category.id}" %>
			</li>
		<% end %>
	</ul>
	<div class="clear"></div>
</div>
<% end %>
