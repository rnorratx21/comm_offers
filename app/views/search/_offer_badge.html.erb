<div class="badge">
	<div class="logo">
	  <% if offer.class != AffiliateOffer %>
	    <% if offer.alternate_logo? %>
  	    <%= image_tag(offer.alternate_logo.normal.url, :alt => h(offer.name), :width => 100, :height => 100) %>
  	  <% else %>
  		  <%= image_tag(offer.logo.normal.url, :alt => h(offer.name), :width => 100, :height => 100) %>
  		<% end %>
  	<% else %>
  	  <%= image_tag(offer.logo.small.url, :alt => h(offer.name), :width => 100, :height => 100) %>
  	<% end %>
  	
	</div>
	<div class="body">
	  <h3 class='headline'><%= h offer.headline %></h3>
	  <h4 class="advertiser"><%= h (offer.is_a?(AffiliateOffer) ? offer.name : offer.business_name) %></h4>
		<p class="title"><%= h offer.title %></p>
		<% if !offer.is_a?(AffiliateOffer) %>
  		<div class="contact">
  			<% if offer.mappable? %>				
  			<p class="address"><%= h offer.address.street %></p>
  			<p class="address"><%= h offer.address.city %> <%= h offer.address.zip_code %></p>
  			<% end %>
  			<p class="phone_number"><%= h offer.phone_number %></p>
  		</div>
		<% end %>
		<% unless offer.new_record?   %>
      <div class='badge_buttons'>
  		  <div class='go_button left'><%= link_to "Get Offer", offer.draft? ? "javascript:void(0)" : build_offer_permalink_path(offer), :class => "get_offer" %></div>
        <% if show_tracked_offer_options? %>
          <div class='favorite_wrapper left'>
            <%= render :partial => "offers/offer_quick_tracking", :locals => {:offer => offer} %>
          </div>
        <% end %>
      </div>
    <% end %>
	</div>
</div>
