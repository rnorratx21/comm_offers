
<% content_for :head do %>
	<script>
	$(function() {
		$("#advertiser_logo").change(function() {
			$("#upload").attr("disabled", false);
		});		
	});
	</script>
<% end %>

<%= head_text "Offer Logo" %>

<% form_for @advertiser, :url => update_logo_advertiser_path, :html => { :method => :put, :multipart => true } do |form| %>
		<p class="field">
			<%= form.label :logo, "Logo File", :class => "model_label" %><br />
			<%= form.file_field :logo %>
		</p>
	
		<button type="submit" id="upload" disabled="true">Upload</button>

    <div id="logo_preview" class="rounded section" style="margin-top: 30px;">
      <h3>This is How Your Logo Looks in Search Results</h3>
      <%= image_tag @advertiser.logo.small.url, :class => "rounded" %>
      <h3>This is How Your Logo Looks on Your Offer Page</h3>
      <%= image_tag @advertiser.logo.normal.url, :class => "rounded" %>
    </div>
<% end %>

<%= link_to 'return to your account', account_path, :class => 'action' %>