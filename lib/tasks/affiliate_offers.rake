namespace :affiliate_offers do
  desc "Loads affiliate offers into the database"
  task :load => :environment do    
    affiliate_data.each do |data| 
      AffiliateOffer.create(data)
    end
  end
  
  desc "Updates existing affiliate offer data"
  task :update => :environment do    
    affiliate_data.each do |data| 
      offer = AffiliateOffer.find_by_name data[:name]
      offer.update_attributes data
    end 
  end
end

